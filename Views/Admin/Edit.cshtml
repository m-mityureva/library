@model BookEditViewModel

@{
    ViewBag.Title = "Edit Book";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Book.Id" />
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <div><span asp-validation-for="Book.Title" class="text-danger"></span></div>
        <input asp-for="Book.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <div><span asp-validation-for="Book.Author" class="text-danger"></span></div>
        <textarea asp-for="Book.Author" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <select class="form-control" asp-for="Book.Genre.Id"
                asp-items="@(new SelectList(Model.Genres, "Id", "Title"))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Book.Count"></label>
        <div><span asp-validation-for="Book.Count" class="text-danger"></span></div>
        <input asp-for="Book.Count" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>