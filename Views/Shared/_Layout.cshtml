<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script asp-src-include="/lib/tether/dist/js/*.min.js"></script>
    <script asp-src-include="/lib/bootstrap/js/dist/*.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <title>Library</title>
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">LIBRARY</a>
            <div class="col-3 text-right">
            </div>
            <div class="col-2 text-right">
                @await Component.InvokeAsync("HeaderMenu")
                @if (User.IsInRole("Reader"))
                {
                    @await Component.InvokeAsync("CartSummary")
                }
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div id="genres" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>
