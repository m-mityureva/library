@model IEnumerable<UserBook>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr><th>Title</th><th>Author</th><th>Quantity</th></tr>
        @foreach (UserBook u in Model)
        {
            <tr>
                <td>@u.Book.Title</td>
                <td>@u.Book.Author</td>
                <th>@u.Quantity</th>
                <td>
                    <form asp-action="Checkout" asp-controller="ReturnRequest" method="post">
                        <input type="hidden" name="userBookId" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Return
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="text-center">No Books</div>
}