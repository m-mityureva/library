@model BooksListViewModel


<form asp-action="List" asp-route-bookPage="1" method="get" class="form-inline">
    <input asp-for="@Model.CurrentSearchString" name="search" class="form-control" placeholder="Find" value="@Model.CurrentSearchString" />
    <div class="input-group-append">
        <button class="btn btn-secondary" type="submit">
            <i class="fa fa-search"></i>
        </button>
    </div>
</form>

<div>
    @foreach (var b in Model.Books)
    {
        @Html.Partial("BookSummary", b)
    }
    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
         page-class="btn" page-class-normal="btn-secondary"
         page-class-selected="btn-primary" page-url-genreId="@Model.CurrentGenreId"
         class="btn-group pull-right m-1">
    </div>
</div>
